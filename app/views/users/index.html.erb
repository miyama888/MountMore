<div class = "container-fluid">
  <div class = "main-image">
    <div class = "user-list">
        <h2>ユーザー一覧</h2>
        <table class= "table table-hover table-inverse">
	        <thead>
          <tr>
	   		    <th>プロフィール画像</th>
	   		    <th>ユーザー名</th>
			       <th colspan="3"></th>
		      </tr>
	        </thead>
          <tbody>
            <% @users.each do |users|%>
  	           <tr>
                <td><%= attachment_image_tag users, :self_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left self-img", fallback: "no_image.jpg" %></td>
                <td><%= users.user_name %></td>
                <td><%= link_to "詳細へ", user_path(users.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class = "text-center">
      <%= paginate  @users%>
    </div>
  </div>
</div>
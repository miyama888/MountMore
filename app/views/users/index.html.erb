<div class = "user-list">
        <h2>Users</h2>
        <table class= "table table-hover table-inverse">
	       <thead>
          <tr>
	   		    <th>image</th>
	   		    <th>name</th>
			       <th colspan="3"></th>
		      </tr>
	       </thead>
         <tbody>
            <% @users.each do |users|%>
	         <tr>
              <td><%= attachment_image_tag users, :self_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left self-img", fallback: "no_image.jpg" %></td>
              <td><%= users.user_name %></td>

              <td><%= link_to "Show", user_path(users.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
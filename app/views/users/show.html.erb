<div class = "main-image">
		<h2>記事詳細</h2>
		<table class= "table table-hover table-inverse"　>
			<thead>
				<tr>
					<th></th>
					<th>タイトル</th>
					<th>内容</th>
					<th colspan="3"></th>
				</tr>
			</thead>
		<tbody>
			<% @articles.each do |article|%>
				<tr>
	      			<td><%#= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %></td>
         			<td><%=link_to article_path(article.id) do%><%= article.title %><% end %></td>
         			<td><%= article.body %></td>
      		<% end %>
      			</tr>
		</tbody>
		</table>
		  <% if  @user.id == current_user.id %>
  <p><%= link_to "プロフィールを編集する", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
<% end %>
</div>
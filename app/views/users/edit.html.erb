<div class = "container">
<% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
<% end %>

  <div class = "row">

      <h2>ユーザー情報</h2>
      <div class="col-xs-12">
        <div class="field">
          <%= form_for(@user, url: user_path(@user.id)) do |f| %>
          <label>ユーザー名</label>
          <%= f.text_field :user_name, autofocus: true, class:"form-control", id:"inputName", placeholder:"ユーザー名"%>
        </div> <!--ユーザー名変更-->
        <div class="field">
          <label>郵便番号</label>
          <%= f.text_field :post_number, autofocus: true, class:"form-control", id:"inputEmail" %>
        </div> <!--自己紹介変更-->
          <label>住所</label>
          <%= f.text_field :address, autofocus: true, class:"form-control", id:"inputEmail" %>
        </div> <!--自己紹介変更-->

        <div class="field">
          <label>イメージ画像</label>
          <label class="control-label sr-only" for="inputName">画像</label>
          <%= f.attachment_field :self_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        </div> <!--プロフィール画像変更-->
        <div class="field">
          <label>自己紹介</label>
          <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>
        </div> <!--自己紹介変更-->
        <div class = "actions">
          <%= f.submit "プロフィールを変更する", class: "data-disable-with" %>
        </div>
      <% end %>
</div>
</div>
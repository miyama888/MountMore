<div class = "container main-image">
	<div class = "row">
<h1>地方名検索結果 '<%= params[:search_word] %>' </h1>
		<table class= "table table-hover table-inverse"　>
			<thead>
				<tr>
					<th>投稿者</th>
					<th>タイトル</th>
					<th>都道府県名</th>
					<th colspan="3"></th>
				</tr>
			</thead>
		<tbody>
			<% @areas.each do |area|%>
			<% area.articles.each do |article| %>
				<tr>
	      			<td><%= attachment_image_tag article.user, :self_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %><%= article.user.user_name %></td>
         			<td><%=link_to article_path(article.id) do%><%= article.title %><% end %></td>
         			<td><%= article.prefecture.prefecture_name %></td>
         			</tr>
      		<% end %>
      		<% end %>
		</tbody>
		</table>
	</div>
</div>
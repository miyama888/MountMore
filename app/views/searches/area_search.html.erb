<h1>area search for '<%= params[:search_word] %>' </h1>
		<table class= "table table-hover table-inverse"　>
			<thead>
				<tr>
					<th>投稿者</th>
					<th>タイトル</th>
					<th></th>
					<th colspan="3"></th>
				</tr>
			</thead>
		<tbody>
			<% @areas.each do |area|%>
			<% area.articles.each do |article| %>
				<tr>
	      			<td><%= attachment_image_tag article.user, :self_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %><%= article.user.user_name %></td>
         			<td><%= article.title %></td>
         			<td><%= article.body %></td>
         			</tr>
      		<% end %>
      		<% end %>
		</tbody>
		</table>
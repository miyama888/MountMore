<div class = "container main-image">
	<div class = "row">
<h1>ユーザー検索結果 '<%= params[:search_word] %>' </h1>
		<table class= "table table-hover table-inverse"　>
			<thead>
				<tr>
					<th>プロフィール画像</th>
					<th>ユーザー名</th>
					<th></th>
					<th colspan="3"></th>
				</tr>
			</thead>
		<tbody>
			<% @users.each do |user|%>
				<tr>
	      			<td><%= attachment_image_tag user, :self_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left profile-img", fallback: "no_image.jpg" %></td>
         			<td><%= user.user_name %></td>
         			<td></td>
         			</tr>
      		<% end %>

		</tbody>
		</table>
	</div>
	</div>
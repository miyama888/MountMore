 <% @articles.each do |article| %>
 <thead></thead>
 	  <tbody>
         <tr>
            <td><%= attachment_image_tag article.user, :self_image, :fill, 60, 60, format: 'jpeg', class: "img pull-left self-img", fallback: "no_image.jpg" %><td>

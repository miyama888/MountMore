    ];

    $("#map-container").japanMap({
        width: 600,
        selection: "area",
        areas: areas,
        backgroundColor : "#f2fcff",
        borderLineColor: "#f2fcff",
        borderLineWidth : 0.25,
        lineColor : "#a0a0a0",
        lineWidth: 0.5,
        drawsBoxLine: false,
        movesIslands : true,
        fontSize : 11,
        onSelect : function(data){
        location.href = areaLinks[data.area.code];
        }
    });
});
</script>
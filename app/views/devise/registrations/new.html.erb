<div class = "container">
<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label :last_name, "姓:", class: "control-label" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %><br/>
            <%= f.label :first_name, "名:", class: "control-label" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "name"%>
          </div>

          <div class="form-group">
            <%= f.label :last_kana, "セイ:", class: "control-label"%>
            <%= f.text_field :last_kana, autofocus: true, autocomplete: "first_kana" %><br/>
            <%= f.label :first_kana, "メイ:", class: "control-label kana-name"%>
            <%= f.text_field :first_kana, autofocus: true, autocomplete: "last_kana" %>
          </div>

          <div class="form-group">
            <%= f.label :ユーザー名 %><br />
            <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= f.label :post_number, "郵便番号(ハイフンなし)", class: "control-label"%><br>
            <%= f.text_field :post_number, autofocus: true, autocomplete: "post_number" %>
          </div>

          <div class="form-group">
            <%= f.label :address, "住所", class: "control-label"%><br>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "登録" %>
          </div>
<% end %>

<%= render "devise/shared/links" %>
</div>